@page "/cverduras"
@inject VerdurasBLL verduraBll
@inject NotificationService notificationService

<EditForm Model="listaVerduras">
    <DataAnnotationsValidator />

    <div class="card">
        <div class="container">

            <div class="card-body">
                <div class="mb-3">
                    <InputDate class="form-control" @bind-Value="fecha" />
                    <div class="input-group-append col-2">
                        <button type="button" @onclick="Todos">
                            <i class="oi oi-magnifying-glass" /> Buscar
                        </button>
                    </div>
                    <div class="d-grid gap-2">
                        <button class="btn btn-primary" type="button" @onclick="Todos">Todos los Registros</button>
                    </div>
                </div>
            </div>

            <table class="table table-success table-striped">

                <thead>
                    <tr>
                        <th>PagosId</th>
                        <th>Fecha</th>
                        <th>PersonaId</th>
                        <th>Concepto</th>
                        <th>Monto</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var verdura in listaVerduras)
                    {
                        <tr>
                            <td>@verdura.VerduraId</td>
                            <td>@verdura.FechaCreacion</td>
                            <td>@verdura.Nombre</td>
                            <td>@verdura.Observaciones</td>
                            <td>@verdura.Total</td>
                            <td><a href="verduras/@verdura.VerduraId">Ver</a></td>
                        </tr>
                    }

                </tbody>

            </table>
        </div>

    </div>
</EditForm>

@code
{
    public string Filtro { get; set; } = "";
    public Verduras verdura { get; set; } = new Verduras();
    public DateTime fecha { get; set; }
    public List<Verduras> listaVerduras { get; set; } = new List<Verduras>();

    protected override void OnInitialized()
    {
        base.OnInitialized();
        fecha = DateTime.Now;
    }

    public void Todos()
    {
        listaVerduras =  verduraBll.GetList(p => true);
    }


}
